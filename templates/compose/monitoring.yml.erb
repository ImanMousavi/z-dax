version: '3.8'

services:
  prometheus:
    image: prom/prometheus:latest
    container_name: prometheus
    restart: always
    volumes:
      - ../config/monitoring/prometheus.yml:/etc/prometheus/prometheus.yml
      - ../config/monitoring/alert.rules:/etc/prometheus/alert.rules
    command:
      - '--config.file=/etc/prometheus/prometheus.yml'
      - '--storage.tsdb.path=/prometheus'
      - '--web.console.libraries=/etc/prometheus/console_libraries'
      - '--web.console.templates=/etc/prometheus/consoles'
      - '--storage.tsdb.retention.time=200h'
      - '--web.enable-lifecycle'

  alertmanager:
    image: prom/alertmanager:latest
    container_name: alertmanager
    restart: always
    volumes:
      - ../config/monitoring/alertmanager.yml:/etc/alertmanager/config.yml
    command:
      - '--config.file=/etc/alertmanager/config.yml'
      - '--storage.path=/alertmanager'
    labels:
      org.label-schema.group: "monitoring"
  
  pushgateway:
    image: prom/pushgateway
    container_name: pushgateway
    restart: always
    labels:
      org.label-schema.group: "monitoring"

  node-exporter:
    image: prom/node-exporter:latest
    container_name: node_exporter
    restart: always
    volumes:
      - /proc:/host/proc:ro
      - /sys:/host/sys:ro
      - /:/rootfs:ro
    command:
      - '--path.procfs=/host/proc'
      - '--path.rootfs=/rootfs'
      - '--path.sysfs=/host/sys'
      - '--collector.filesystem.ignored-mount-points=^/(sys|proc|dev|host|etc)($$|/)'

  cadvisor:
    image: google/cadvisor:latest
    container_name: cadvisor
    restart: always
    volumes:
      - /var/run:/var/run:rw
      - /var/lib/docker/:/var/lib/docker:ro
      - /:/rootfs:ro
      - /sys:/sys:ro

  grafana:
    image: grafana/grafana:latest
    container_name: grafana
    restart: always
    volumes:
      # - ./data/grafana:/var/lib/grafana
      - ../config/monitoring/grafana/provisioning:/etc/grafana/provisioning
    environment:
      - GF_SECURITY_ADMIN_PASSWORD=guest
      - GF_USERS_ALLOW_SIGN_UP=false
      - GF_SERVER_DOMAIN=<%= @config['app']['subdomain'] %>.<%= @config['app']['domain'] %>
      - GF_SMTP_ENABLED=false
    labels:
      - "traefik.http.routers.grafana-<%= @name %>.rule=Host(`monitoring.<%= @config['app']['domain'] %>`)"
      - "traefik.http.services.grafana-<%= @name %>.loadbalancer.server.port=3000"
      - "traefik.enable=true"
      <%- if @config['ssl']['enabled'] -%>
      - "traefik.http.routers.grafana-<%= @name %>.entrypoints=websecure"
      - "traefik.http.routers.grafana-<%= @name %>.tls=true"
      <%- else -%>
      - "traefik.http.routers.grafana-<%= @name %>.entrypoints=web"
      <%- end -%>
      - "org.label-schema.group=monitoring"
