version: '3.6'

services:
  db:
    image: mysql:5.7
    ports:
      - "3306:3306"
    networks:
      - backend-net
    volumes:
      - db_data:/var/lib/mysql
    configs:
      - source: mysql_config
        target: /etc/mysql/my.cnf
    environment:
      MYSQL_ROOT_PASSWORD: djtdjtdjtdjt

  phpmyadmin:
    image: phpmyadmin/phpmyadmin
    networks:
      - backend-net
      - proxy-net
    depends_on:
      - db
    environment:
      PMA_HOST: db
      PMA_USER: root
      PMA_PASSWORD: djtdjtdjtdjt
      PHP_UPLOAD_MAX_FILESIZE: 1G
      PHP_MAX_INPUT_VARS: 1G
    deploy:
      restart_policy:
        condition: on-failure
      labels:
        - "traefik.http.routers.phpmyadmin-<%= @name %>.rule=Host(`pma.<%= @config['app']['domain'] %>`)"
        - "traefik.http.services.phpmyadmin-<%= @name %>.loadbalancer.server.port=80"
        - "traefik.enable=true"
        <%- if @config['ssl']['enabled'] -%>
        - "traefik.http.routers.phpmyadmin-<%= @name %>.entrypoints=websecure"
        - "traefik.http.routers.phpmyadmin-<%= @name %>.tls=true"
        <%- else -%>
        - "traefik.http.routers.phpmyadmin-<%= @name %>.entrypoints=web"
        <%- end -%>

  redis:
    image: bitnami/redis:4.0.14-ol-7-r33
    ports:
      - "6379:6379"
    environment:
      REDIS_REPLICATION_MODE: 'master'
      REDIS_PASSWORD: 'djtdjtdjtdjt'
    networks:
      - backend-net
      - proxy-net
    volumes:
      - redis_data:/bitnami/redis/data

  rabbitmq:
    image: rabbitmq:3.7.6-management
    ports:
      - "5672:5672"
      - "15672:15672"
    networks:
      - backend-net
      - proxy-net
    volumes:
      - rabbitmq_data:/var/lib/rabbitmq
    deploy:
      restart_policy:
        condition: on-failure

  influxdb:
    image: influxdb:1.7.8
    ports:
      - "8086:8086"
    networks:
      - backend-net
    environment:
      INFLUXDB_ADMIN_ENABLED: "true"
    configs:
      - source: influxdb_build_candles
        target: /build_candles.sql
      - source: influxdb_config
        target: /influxdb.sql
    volumes:
      - influxdb_data:/var/lib/influxdb
    deploy:
      restart_policy:
        condition: on-failure

volumes:
  db_data:
    driver_opts:
      type: "none"
      o: "bind"
      device: "<%= @current_folder %>/data/db"

  rabbitmq_data:
    driver_opts:
      type: "none"
      o: "bind"
      device: "<%= @current_folder %>/data/rabbitmq"

  redis_data:
    driver_opts:
      type: "none"
      o: "bind"
      device: "<%= @current_folder %>/data/redis"

  influxdb_data:
    driver_opts:
      type: "none"
      o: "bind"
      device: "<%= @current_folder %>/data/influxdb"

configs:
  mysql_config:
    file: ../config/mysql/my.cnf
  vault_config:
    file: ../config/vault/config.json
  influxdb_config:
    file: ../config/influxdb/influxdb.sql
  influxdb_build_candles:
    file: ../config/influxdb/build_candles.sql


networks:
  backend-net:
    driver: overlay
    name: backend-net
    attachable: true
  proxy-net:
    external: true
