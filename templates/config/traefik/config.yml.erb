entryPoints:
  web:
    address: ":80"
<% if @config['ssl']['enabled'] -%>
    http:
      redirections:
        entrypoint:
          to: websecure
          scheme: https

  websecure:
    address: ":443"
<% end -%>

api:
  insecure: true

providers:
  docker:
    endpoint: "unix:///var/run/docker.sock"
    exposedbydefault: false
    useBindPortIP: true
    swarmMode: true
    watch: true
    network: proxy-net
  file:
    filename: /etc/traefik/dyn.yml

log:
  level: DEBUG